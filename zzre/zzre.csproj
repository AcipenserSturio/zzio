<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Nullable>enable</Nullable>
    <WarningsAsErrors>NU1605;nullable</WarningsAsErrors>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="shaders\color.frag" />
    <None Remove="shaders\color.vert" />
    <None Remove="shaders\DebugSkinAll.frag" />
    <None Remove="shaders\DebugSkinAll.vert" />
    <None Remove="shaders\DebugSkinSingle.frag" />
    <None Remove="shaders\DebugSkinSingle.vert" />
    <None Remove="shaders\ModelSkinned.frag" />
    <None Remove="shaders\ModelSkinned.vert" />
    <None Remove="shaders\ModelStandard.frag" />
    <None Remove="shaders\ModelStandard.vert" />
    <None Remove="shaders\VertexColor.frag" />
    <None Remove="shaders\VertexColor.vert" />
    <None Remove="shaders\VertexColorSkinned.frag" />
    <None Remove="shaders\VertexColorSkinned.vert" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="shaders\DebugSkinSingle.frag" />
    <EmbeddedResource Include="shaders\DebugSkinSingle.vert" />
    <EmbeddedResource Include="shaders\DebugSkinAll.frag" />
    <EmbeddedResource Include="shaders\DebugSkinAll.vert" />
    <EmbeddedResource Include="shaders\ModelSkinned.frag" />
    <EmbeddedResource Include="shaders\ModelSkinned.vert" />
    <EmbeddedResource Include="shaders\VertexColorSkinned.frag" />
    <EmbeddedResource Include="shaders\VertexColorSkinned.vert" />
    <EmbeddedResource Include="shaders\VertexColor.vert" />
    <EmbeddedResource Include="shaders\VertexColor.frag" />
    <EmbeddedResource Include="shaders\ModelStandard.frag" />
    <EmbeddedResource Include="shaders\ModelStandard.vert" />
    <EmbeddedResource Include="shaders\color.frag" />
    <EmbeddedResource Include="shaders\color.vert" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Veldrid" Version="4.8.0" />
    <PackageReference Include="Veldrid.ImageSharp" Version="4.8.0" />
    <PackageReference Include="Veldrid.SPIRV" Version="1.0.13" />
    <PackageReference Include="Veldrid.StartupUtilities" Version="4.8.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Veldrid.ImGui\Veldrid.ImGui.csproj" />
    <ProjectReference Include="..\zzio\zzio.csproj" />
    <ProjectReference Include="..\zzre.core\zzre.core.csproj" />
  </ItemGroup>

</Project>
